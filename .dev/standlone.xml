<standlone.xml.configs>

    <!--数据源配置-->
    <datasource jta="true" jndi-name="java:jboss/datasources/postgres" pool-name="postgres" enabled="true" use-ccm="true">
        <connection-url>jdbc:postgresql://127.0.0.1:5432/postgres</connection-url>
        <driver-class>org.postgresql.Driver</driver-class>
        <driver>postgresql</driver>
        <security>
            <user-name>postgres</user-name>
            <password>echoshen</password>
        </security>
        <validation>
            <valid-connection-checker
                    class-name="org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLValidConnectionChecker"/>
            <background-validation>true</background-validation>
            <exception-sorter class-name="org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLExceptionSorter"/>
        </validation>
        <timeout>
            <set-tx-query-timeout>false</set-tx-query-timeout>
        </timeout>
    </datasource>
    <!--驱动加载-->
    <driver name="postgresql" module="org.postgresql">
        <xa-datasource-class>org.postgresql.xa.PGXADataSource</xa-datasource-class>
    </driver>

    <!--主机地址配置-->
    <host name="service.yao.com" default-web-module="gomro.ear/service.war" alias="x.service.yao.com"/>
    <host name="web.yao.com" default-web-module="gomro.ear/web.war" alias="x.web.yao.com"/>

    <!--消息队列配置-->
    <jms-queue name="MyMessage" entries="java:/jms/queue/MyMessage"/>
    <jms-queue name="MyTopicMessage" entries="java:/jms/queue/MyTopicMessage"/>
</standlone.xml.configs>