    id, role_id, menu_id, creator, create_time, updator, update_time, is_deleted
  </sql>
 
  <insert id="insert" parameterType="com.adam.sys.userfunc.entity.RoleMenu" >
    insert into t_sys_rolemenu (role_id, menu_id,creator, create_time,update_time,updator, is_deleted)
    <foreach collection="list" separator="UNION ALL" item="item">
       select #{item.roleId},#{item.menuId},#{item.creator},NOW(),NOW(),#{item.creator},0
    </foreach>
  </insert>
  
  <delete id="delete" parameterType="map">
	delete from t_sys_rolemenu WHERE role_id =#{roleId} and menu_id in
	<foreach collection="list" item="menuId" open="(" close=")" separator="," >
	     #{menuId}
	</foreach>
  </delete>
</mapper>