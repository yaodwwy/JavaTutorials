<mapper namespace="com.adam.sys.userfunc.dao.RoleMenuDao" >
  <resultMap id="BaseResultMap" type="com.adam.sys.userfunc.entity.RoleMenu" >
    <id column="id" property="id" jdbcType="INTEGER" />
